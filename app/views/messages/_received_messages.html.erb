<div class="container">
  <% if @received_messages != nil %>
      <div class="row">
        <% @received_messages.each do |message| %>
            <div class="col-md-4" style="margin-left: 5px;margin-top:15px; margin-right: 5px; background-color: rgba(58, 74, 81, 0.15)">
              <div class="row">
                <div class="col-md-4">
                  <%= image_tag 'url',class: 'ui circular image'  %>
                </div>
                <div class="col-md-8">
                  Names
                </div>
              </div>
              <div class="ui segment">

              </div>
              <div class="row">
                <span><button type="button" name="button" class="ui button "> <i class="ui talk icon"></i> Message</button></span>
                <span><button type="button" name="button" class="ui button "><i class="ui calendar icon"></i>Schedule</button></span>
                <span><button type="button" name="button" class="ui button"> <i class="ui checkmark icon "></i> Accept</button></span>
                <span><button type="button" name="button" class="ui button"> <i class="ui remove icon"></i> Decline</button></span>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>

<div class="row">
  <% if @received_messages != nil %>
      <div class="col-md-4">
        <div class="container" id="message_body">

          <% @received_messages.each do |message| %>
              <p> Sender: <%= message.user.to_s.inspect %> </p>
              <p> Message: <%= message.message_body %> </p>
              <button id="reply">Reply</button>
              <button id="schedule">Schedule</button>
              <button id="accept">Accept</button>
              <button id="decline">Decline</button>

              <div class="container" id="replies">
                <% if message.responses.nil? %>
                    <% message.responses.each do |response| %>
                        <%= response.body %>
                    <% end %>
                <% end %>
              </div>

              <div class="container" id="new_reply">
                <%= simple_form_for @response, url: reply_message_path, method: :post do |f| %>
                    <%= f.input :message_id, :as => :hidden, input_html: {value: "#{message.id}"} %>
                    <%= f.input :body %>
                    <%= f.button :submit %>
                <% end %>
              </div>
          <% end %>
        </div>

        <div class="container" id="message_options">
          <div class="container" id="new_schedule">
          </div>
          <div class="container" id="confirm_accept">
          </div>
          <div class="container" id="confirm_decline">
          </div>
        </div>

      </div>
  <% else%>
      <h2>Oops no message yet ;( </h2>
  <% end %>
</div>
